<% layout('layouts/boilerplate') %>
    <h1>Edit Movie</h1>
    <form action="/movies/<%=movie._id%>?_method=PUT" method="POST" class="needs-validation" novalidate>
        
        <div>
            <label for="movieTitle">Title</label>
            <input type="text" id="movieTitle" name="movie[movieTitle]" value="<%=movie.movieTitle %>" required>
        </div>
        <div>
            <label for="movieDescription">Description</label>
            <input type="text" id="movieDescription" name="movie[movieDescription]" value="<%= movie.movieDescription%>" required>
        </div>
        <div>
            <!--<label class="form-label" for="personalRating">Personal Rating</label>
            <input type="text" id="personalRating" value="" name="movie[personalRating]" required>-->
        </div>
        <button>Update Movie</button>
    </form>
    <a href="/movies/<%= movie._id%>">Back To Movie</a>
