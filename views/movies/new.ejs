<% layout('layouts/boilerplate') %>
    <form action="/movies" method="POST" novalidate class="needs-validation">

        <div>
            <label for="title">Title</label>
            <input type="text" id="title" name="movie[title]" required>
        </div>
        <div>
            <label for="description">Description</label>
            <input type="text" id="description" name="movie[description]" required>
        </div>
        <div>
            <label class="form-label" for="personalRating">Personal Rating</label>
            <input type="text" id="personalRating" placeholder="0" default="0" name="movie[personalRating]">
        </div>
        <button>Add Movie</button>
    </form>
    <a href="/movies">All Movies</a>